#include <iostream>
#include <string>
using namespace std;

struct Item {
int id;
string name;
float cost;
};

int main() {
Item items[8];
float total = 0;

for (int i = 0; i < 8; i++) {
cout << "Enter details of item " << (i + 1) << ":\n";
cout << "ID: ";
cin >> items[i].id;
cout << "Name: ";
cin >> items[i].name;
cout << "Cost: ";
cin >> items[i].cost;
total += items[i].cost;
}

for (int i = 0; i < 7; i++) {
for (int j = 0; j < 7 - i; j++) {
if (items[j].cost < items[j + 1].cost) {

Item temp = items[j];
items[j] = items[j + 1];
items[j + 1] = temp;
}
}
}

cout << "\nSorted items by cost (descending order):\n";
cout << "-----------------------------------------\n";
cout << "ID\tName\tCost\n";
cout << "-----------------------------------------\n";

for (int i = 0; i < 8; i++) {
cout << items[i].id << "\t" << items[i].name << "\t₹" << items[i].cost << "\n";
}

cout << "-----------------------------------------\n";
cout << "Average cost of items: ₹" << total / 8 << "\n";

return 0;
}




	
