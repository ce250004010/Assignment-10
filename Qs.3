#include <iostream>
#include <string>
using namespace std;

struct Employee {
int id;
string name;
float salary;
};

int main() {
Employee employees[10];
int choice, search_id;
bool found;

for (int i = 0; i < 10; i++) {
cout << "Enter details for employee " << i + 1 << "\n";
cout << "ID: ";
cin >> employees[i].id;
cin.ignore(); // Clear input buffer
cout << "Name: ";
getline(cin, employees[i].name);
cout << "Salary: ";
cin >> employees[i].salary;
cin.ignore();
}

while (true) {
cout << "\nMenu:\n";
cout << "1. Display all employee details\n";
cout << "2. Search for an employee by ID\n";
cout << "3. Increase salary by 10% for employees earning less than ₹30,000\n";
cout << "4. Exit\n";
cout << "Enter your choice: ";
cin >> choice;

switch (choice) {
case 1:
cout << "\nEmployee details:\n";
for (int i = 0; i < 10; i++) {
cout << "ID: " << employees[i].id
<< ", Name: " << employees[i].name
<< ", Salary: ₹" << employees[i].salary << "\n";
}
break;

case 2:
cout << "Enter employee ID to search: ";
cin >> search_id;
found = false;
for (int i = 0; i < 10; i++) {
if (employees[i].id == search_id) {
cout << "Employee found:\n";
cout << "ID: " << employees[i].id
<< ", Name: " << employees[i].name
<< ", Salary: ₹" << employees[i].salary << "\n";
found = true;
break;
}
}
if (!found)
cout << "Employee with ID " << search_id << " not found.\n";
break;

case 3:
for (int i = 0; i < 10; i++) {
if (employees[i].salary < 30000)
employees[i].salary *= 1.10f;
}
cout << "Salaries updated for employees earning less than ₹30,000.\n";
break;

case 4:
return 0;

default:
cout << "Invalid choice. Please try again.\n";
}
}
}
