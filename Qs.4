}
outfile.close();


SalesRecord readSales[12];
ifstream infile("sales_data.txt");
if (!infile) {
cerr << "Error opening file for reading.\n";
return 1;
}
int count = 0;
while (count < 12 && infile >> readSales[count].month >> readSales[count].amount) {
++count;
}
infile.close();


float total = 0;
for (int i = 0; i < 12; ++i) {
total += readSales[i].amount;
}
float average = total / 12;


cout << "Months with sales above yearly average (" << average << "):";
for (int i = 0; i < 12; ++i) {
if (readSales[i].amount > average) {
cout << readSales[i].month << "\n";
}
}

return 0;
}
